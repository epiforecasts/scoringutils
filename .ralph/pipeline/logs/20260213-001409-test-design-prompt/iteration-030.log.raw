{"type":"user","message":{"role":"user","content":[{"tool_use_id":"toolu_01QHECFd3nmWZLcWzDJ57nox","type":"tool_result","content":"     1→observed <- c(1, -15, 22)\n     2→predicted <- rbind(\n     3→  c(-1, 0, 1, 2, 3),\n     4→  c(-2, 1, 2, 2, 4),\n     5→  c(-2, 0, 3, 3, 4)\n     6→)\n     7→quantile_level <- c(0.1, 0.25, 0.5, 0.75, 0.9)\n     8→\n     9→# covidHubUtils test:\n    10→y <- c(1, -15, 22)\n    11→forecast_quantiles_matrix <- rbind(\n    12→  c(-1, 0, 1, 2, 3),\n    13→  c(-2, 1, 2, 2, 4),\n    14→  c(-2, 0, 3, 3, 4)\n    15→)\n    16→forecast_quantile_probs <- c(0.1, 0.25, 0.5, 0.75, 0.9)\n    17→\n    18→\n    19→# ==============================================================================\n    20→# check_input_quantile() # nolint: commented_code_linter\n    21→# ==============================================================================\n    22→test_that(\"check_input_quantile() works as expected\", {\n    23→  # expect no error if dimensions are ok\n    24→  expect_true(\n    25→    check_input_quantile(\n    26→      1:10, matrix(1:20, nrow = 10),\n    27→      quantile_level = c(0.1, 0.9)\n    28→    )\n    29→  )\n    30→\n    31→  # expect error if dimensions are not ok\n    32→  expect_match(\n    33→    check_input_quantile(\n    34→      1:10, matrix(1:20, nrow = 10),\n    35→      quantile_level = seq(0.1, 0.9, length.out = 8)\n    36→    ),\n    37→    \"Assertion on 'predicted' failed: Must have exactly 8 cols, but has 2 cols.\"\n    38→  )\n    39→})\n    40→\n    41→# ============================================================================ #\n    42→# Input handling ===============================================================\n    43→# ============================================================================ #\n    44→test_that(\"Input checking for quantile forecasts works\", {\n    45→  # everything correct\n    46→  expect_no_condition(\n    47→    scoringutils:::assert_input_quantile(observed, predicted, quantile_level) # nolint: undesirable_operator_linter\n    48→  )\n    49→\n    50→  # quantile_level > 1 # nolint: commented_code_linter\n    51→  expect_error(\n    52→    scoringutils:::assert_input_quantile(observed, predicted, quantile_level + 1), # nolint: undesirable_operator_linter\n    53→    \"Assertion on 'quantile_level' failed: Element 1 is not <= 1.\"\n    54→  )\n    55→\n    56→  # quantile_level < 0 # nolint: commented_code_linter\n    57→  expect_error(\n    58→    scoringutils:::assert_input_quantile(observed, predicted, quantile_level - 1), # nolint: undesirable_operator_linter\n    59→    \"Assertion on 'quantile_level' failed: Element 1 is not >= 0.\"\n    60→  )\n    61→\n    62→  # 10 observations, but only 3 forecasts\n    63→  expect_error(\n    64→    scoringutils:::assert_input_quantile(1:10, predicted, quantile_level), # nolint: undesirable_operator_linter\n    65→    \"Assertion on 'predicted' failed: Must have exactly 10 rows, but has 3 rows.\"\n    66→  )\n    67→\n    68→  # observed value is a factor\n    69→  expect_error(\n    70→    scoringutils:::assert_input_quantile(factor(1:10), predicted, quantile_level), # nolint: undesirable_operator_linter\n    71→    \"Assertion on 'observed' failed: Must be of type 'numeric', not 'factor'.\"\n    72→  )\n    73→\n    74→  # observed is a single number and does not have the same length as predicted\n    75→  # There seems to be an issue with the error message: there is one \\n to many\n    76→  # such that the test fails when executed alone, but works when executed\n    77→  # together with others.\n    78→  expect_error(\n    79→    scoringutils:::assert_input_quantile(1, predicted, quantile_level), # nolint: undesirable_operator_linter\n    80→    \"Assertion failed.*check_numeric_vector.*check_matrix\"\n    81→  )\n    82→\n    83→  # predicted is a vector\n    84→  expect_error(\n    85→    scoringutils:::assert_input_quantile(observed, as.vector(predicted), quantile_level), # nolint: undesirable_operator_linter\n    86→    \"Assertion on 'predicted' failed: Must be of type 'matrix', not 'double'.\"\n    87→  )\n    88→})\n    89→\n    90→\n    91→# ============================================================================ #\n    92→# wis ==========================================================================\n    93→# ============================================================================ #a\n    94→test_that(\"wis works standalone, median only\", {\n    95→  y <- c(1, -15, 22)\n    96→  lower <- upper <- predicted_quantile <- c(1, 2, 3)\n    97→  quantile_probs <- 0.5\n    98→\n    99→  actual <- interval_score(y,\n   100→    lower = lower, upper = upper,\n   101→    weigh = TRUE,\n   102→    interval_range = 0\n   103→  )\n   104→\n   105→  actual_wis <- wis(\n   106→    observed = y,\n   107→    predicted = matrix(predicted_quantile),\n   108→    quantile_level = quantile_probs\n   109→  )\n   110→\n   111→  expected <- abs(y - lower)\n   112→\n   113→  expect_identical(actual, expected)\n   114→})\n   115→\n   116→test_that(\"`wis()` works within score for median forecast\", {\n   117→  test_data <- data.frame(\n   118→    observed = c(1, -15, 22),\n   119→    predicted = 1:3,\n   120→    quantile_level = rep(0.5, each = 3),\n   121→    model = \"model1\",\n   122→    date = 1:3,\n   123→    stringsAsFactors = FALSE\n   124→  ) |>\n   125→    as_forecast_quantile()\n   126→\n   127→  metrics <- get_metrics(example_quantile) |>\n   128→    select_metrics(select = c(\"ae_median\", \"wis\"))\n   129→  metrics$wis <- purrr::partial(metrics$wis, count_median_twice = TRUE)\n   130→\n   131→  eval <- score(test_data, metrics = metrics)\n   132→  expect_equal(eval$ae_median, eval$wis) # nolint: expect_identical_linter\n   133→})\n   134→\n   135→test_that(\"`wis()` equals `interval_score()`, 1 interval only\", {\n   136→  y <- c(1, -15, 22)\n   137→  lower <- c(0, 1, 0)\n   138→  upper <- c(2, 2, 3)\n   139→  quantile_probs <- c(0.25, 0.75)\n   140→  predicted <- matrix(c(lower, upper), ncol = 2)\n   141→\n   142→  alpha <- 0.5\n   143→  expected <- (upper - lower) * (alpha / 2) + c(0, 1 - (-15), 22 - 3)\n   144→\n   145→  actual <- interval_score(\n   146→    y,\n   147→    lower = lower, upper = upper,\n   148→    weigh = TRUE,\n   149→    interval_range = 50\n   150→  )\n   151→\n   152→  actual_wis <- wis(\n   153→    observed = y,\n   154→    predicted = predicted,\n   155→    quantile_level = quantile_probs\n   156→  )\n   157→\n   158→  expect_identical(actual, expected)\n   159→  expect_identical(actual_wis, expected)\n   160→})\n   161→\n   162→test_that(\"wis() works within score for one interval\", {\n   163→  test_data <- data.frame(\n   164→    observed = rep(c(1, -15, 22), times = 2),\n   165→    quantile_level = rep(c(0.25, 0.75), each = 3),\n   166→    predicted = c(0, 1, 0, 2, 2, 3),\n   167→    model = \"model1\",\n   168→    date = rep(1:3, times = 2),\n   169→    stringsAsFactors = FALSE\n   170→  ) |>\n   171→    as_forecast_quantile()\n   172→\n   173→  metrics <- get_metrics(example_quantile) |>\n   174→    select_metrics(select = \"wis\")\n   175→  metrics$wis <- purrr::partial(metrics$wis, count_median_twice = TRUE)\n   176→\n   177→  eval <- score(test_data, metrics = metrics)\n   178→\n   179→  eval <- summarise_scores(eval, by = c(\"model\", \"date\"))\n   180→\n   181→  lower <- c(0, 1, 0)\n   182→  upper <- c(2, 2, 3)\n   183→  alpha <- 0.5\n   184→\n   185→  expected <- (upper - lower) * (alpha / 2) + c(0, 1 - (-15), 22 - 3)\n   186→\n   187→  expect_equal(expected, eval$wis) # nolint: expect_identical_linter\n   188→})\n   189→\n   190→test_that(\"`wis()` works 1 interval and median\", {\n   191→  test_data <- data.frame(\n   192→    observed = rep(c(1, -15, 22), times = 3),\n   193→    quantile_level = rep(c(0.25, 0.5, 0.75), each = 3),\n   194→    predicted = c(0, 1, 0, 1, 2, 3, 2, 2, 3),\n   195→    model = \"model1\",\n   196→    date = rep(1:3, times = 3),\n   197→    stringsAsFactors = FALSE\n   198→  ) |>\n   199→    as_forecast_quantile()\n   200→"}]},"parent_tool_use_id":"toolu_01At9ss5uEU3jgBq14SwKQkw","session_id":"8e8f5457-0521-488c-ae9d-60ad5e963fe0","uuid":"c3196640-0743-46bf-a37d-0bef22ec670b"}
