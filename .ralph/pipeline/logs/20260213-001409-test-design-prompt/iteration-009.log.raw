e(), as it is\n   136→  # also an argument.\n   137→  # If it's not scoped well, the call to `as_forecast_quantile()` will fail.\n   138→  samples$type <- \"test\"\n   139→\n   140→  quantile3 <- as_forecast_quantile(\n   141→    as_forecast_sample(samples),\n   142→    probs = c(0.25, 0.75)\n   143→  )\n   144→  quantile3$type <- NULL\n   145→\n   146→  expect_identical(\n   147→    quantile2,\n   148→    quantile3\n   149→  )\n   150→})\n   151→\n   152→test_that(\"as_forecast_quantiles issue 557 fix\", {\n   153→  out <- example_sample_discrete |>\n   154→    na.omit() |>\n   155→    as_forecast_quantile(\n   156→      probs = c(0.01, 0.025, seq(0.05, 0.95, 0.05), 0.975, 0.99)\n   157→    ) |>\n   158→    score()\n   159→\n   160→  expect_false(anyNA(out$interval_coverage_deviation))\n   161→})\n   162→\n   163→test_that(\"as_forecast_quantile doesn't modify column names in place\", {\n   164→  quantile_data <- data.table(\n   165→    my_quantile = c(0.25, 0.5),\n   166→    forecast_value = c(1, 2),\n   167→    observed_value = c(5, 5)\n   168→  )\n   169→  pre <- names(quantile_data)\n   170→\n   171→  quantile_forecast <- as_forecast_quantile(\n   172→    quantile_data,\n   173→    predicted = \"forecast_value\",\n   174→    observed = \"observed_value\",\n   175→    quantile_level = \"my_quantile\"\n   176→  )\n   177→\n   178→  post <- names(quantile_data)\n   179→  expect_identical(pre, post)\n   180→})\n   181→\n   182→test_that(\"as_forecast_quantile handles rounding issues correctly\", {\n   183→  quantile_data <- data.table(\n   184→    quantile_level = c(0.25, 0.75 + 1e-13, 0.25, 0.75),\n   185→    predicted = c(1, 2, 3, 4),\n   186→    observed = c(5, 5, 5, 5),\n   187→    location = c(1, 1, 2, 2)\n   188→  )\n   189→  quantile_forecast <- suppressWarnings(as_forecast_quantile(quantile_data))\n   190→  expect_warning(\n   191→    as_forecast_quantile(quantile_data),\n   192→    \"rounding issue\"\n   193→  )\n   194→  expect_no_condition(\n   195→    score(quantile_forecast, metrics = c(wis = wis))\n   196→  )\n   197→})\n   198→\n   199→\n   200→\n   201→\n   202→\n   203→# ==============================================================================\n   204→# is_forecast_quantile() # nolint: commented_code_linter\n   205→# ==============================================================================\n   206→test_that(\"is_forecast_quantile() works as expected\", {\n   207→  expect_true(is_forecast_quantile(example_quantile))\n   208→  expect_false(is_forecast_quantile(example_binary))\n   209→  expect_false(is_forecast_quantile(example_point))\n   210→  expect_false(is_forecast_quantile(example_sample_continuous))\n   211→  expect_false(is_forecast_quantile(example_nominal))\n   212→})\n   213→\n   214→# ==============================================================================\n   215→# score.forecast_quantile() # nolint: commented_code_linter\n   216→# ==============================================================================\n   217→test_that(\"score_quantile correctly handles separate results = FALSE\", {\n   218→  df <- example_quantile[model == \"EuroCOVIDhub-ensemble\" &\n   219→                           target_type == \"Cases\" & location == \"DE\"]\n   220→  metrics <- get_metrics(example_quantile)\n   221→  metrics$wis <- purrr::partial(wis, separate_results = FALSE)\n   222→  eval <- score(df[!is.na(predicted)], metrics = metrics)\n   223→\n   224→  expect_gt(\n   225→    nrow(eval), 1\n   226→  )\n   227→  expect_true(all(names(get_metrics(example_quantile)) %in% colnames(eval)))\n   228→\n   229→  expect_s3_class(eval, c(\"scores\", \"data.table\", \"data.frame\"), exact = TRUE)\n   230→})\n   231→\n   232→\n   233→test_that(\"score() quantile produces desired metrics\", {\n   234→  data <- data.frame(\n   235→    observed = rep(1:10, each = 3),\n   236→    predicted = rep(c(-0.3, 0, 0.3), 10) + rep(1:10, each = 3),\n   237→    model = \"Model 1\",\n   238→    date = as.Date(\"2020-01-01\") + rep(1:10, each = 3),\n   239→    quantile_level = rep(c(0.1, 0.5, 0.9), times = 10),\n   240→    stringsAsFactors = FALSE\n   241→  )\n   242→\n   243→  data <- suppressWarnings(suppressMessages(as_forecast_quantile(data)))\n   244→\n   245→  out <- score(forecast = data, metrics = metrics_no_cov)\n   246→  metrics <- c(\n   247→    \"dispersion\", \"underprediction\", \"overprediction\",\n   248→    \"bias\", \"ae_median\"\n   249→  )\n   250→\n   251→  expect_true(all(metrics %in% colnames(out)))\n   252→})\n   253→\n   254→\n   255→test_that(\"calculation of ae_median is correct for a quantile format case\", {\n   256→  eval <- summarise_scores(scores_quantile, by = \"model\")\n   257→\n   258→  example <- as.data.table(example_quantile)\n   259→  ae <- example[quantile_level == 0.5, ae := abs(observed - predicted)][!is.na(model), .(mean = mean(ae, na.rm = TRUE)),\n   260→    by = \"model\"\n   261→  ]$mean\n   262→\n   263→  expect_equal( # nolint: expect_identical_linter\n   264→    sort(eval$ae_median), sort(ae)\n   265→  )\n   266→})\n   267→\n   268→\n   269→test_that(\"all quantile and range formats yield the same result\", {\n   270→  eval1 <- summarise_scores(scores_quantile, by = \"model\")\n   271→\n   272→  df <- as.data.table(example_quantile)\n   273→\n   274→  ae <- df[\n   275→    quantile_level == 0.5, ae := abs(observed - predicted)\n   276→  ][\n   277→    !is.na(model), .(mean = mean(ae, na.rm = TRUE)),\n   278→    by = \"model\"\n   279→  ]$mean\n   280→\n   281→  expect_equal( # nolint: expect_identical_linter\n   282→    sort(eval1$ae_median), sort(ae)\n   283→  )\n   284→})\n   285→\n   286→test_that(\"WIS is the same with other metrics omitted or included\", {\n   287→  eval <- score(example_quantile,\n   288→    metrics = list(wis = wis)\n   289→  )\n   290→\n   291→  eval2 <- scores_quantile\n   292→\n   293→  expect_equal( # nolint: expect_identical_linter\n   294→    sum(eval$wis),\n   295→    sum(eval2$wis)\n   296→  )\n   297→}