rics$wis <- purrr::partial(wis, count_median_twice = TRUE)\n   522→  eval2 <- eval <- score(data_formatted, metrics = metrics)\n   523→  eval2 <- summarise_scores(eval2,\n   524→    by = c(\n   525→      \"model\", \"location\", \"target_variable\",\n   526→      \"target_end_date\", \"forecast_date\", \"horizon\"\n   527→    )\n   528→  )\n   529→  expect_equal(eval2$wis, expected2) # nolint: expect_identical_linter\n   530→  expect_equal(actual_wis2, expected2) # nolint: expect_identical_linter\n   531→})\n   532→\n   533→test_that(\"Quantlie score and interval score yield the same result, weigh = FALSE\", {\n   534→  # calling quantile_score and wis should return the same result if all\n   535→  # quantiles form central prediction intervals\n   536→  expect_equal( # nolint: expect_identical_linter\n   537→    quantile_score(observed, predicted, quantile_level),\n   538→    wis(observed, predicted, quantile_level)\n   539→  )\n   540→\n   541→  observed <- rnorm(10, mean = 1:10)\n   542→  alphas <- c(0.1, 0.5, 0.9)\n   543→\n   544→  for (alpha in alphas) {\n   545→    lower <- qnorm(alpha / 2, rnorm(10, mean = 1:10))\n   546→    upper <- qnorm((1 - alpha / 2), rnorm(10, mean = 11:20))\n   547→\n   548→    w <- FALSE\n   549→    is <- interval_score(\n   550→      observed = observed,\n   551→      lower = lower,\n   552→      upper = upper,\n   553→      interval_range = (1 - alpha) * 100,\n   554→      weigh = w\n   555→    )\n   556→\n   557→    wis <- wis(\n   558→      observed = observed,\n   559→      predicted = cbind(lower, upper),\n   560→      quantile_level = c(alpha / 2, 1 - alpha / 2),\n   561→      count_median_twice = FALSE,\n   562→      weigh = w\n   563→    )\n   564→\n   565→    qs_lower <- quantile_score(observed,\n   566→      predicted = matrix(lower),\n   567→      quantile_level = alpha / 2,\n   568→      weigh = w\n   569→    )\n   570→    qs_upper <- quantile_score(observed,\n   571→      predicted = matrix(upper),\n   572→      quantile_level = 1 - alpha / 2,\n   573→      weigh = w\n   574→    )\n   575→    expect_equal((qs_lower + qs_upper) / 2, is) # nolint: expect_identical_linter\n   576→    expect_equal(wis, is) # nolint: expect_identical_linter\n   577→  }\n   578→})\n   579→\n   580→\n   581→test_that(\"wis errors when there are no valid forecast intervals\", {\n   582→  # test that wis throws an error when there are no valid forecast intervals\n   583→  # (i.e. the quantiles do not form central prediction intervals)\n   584→  observed <- 0.1\n   585→  predicted <- c(\n   586→    0.1032978, 0.1078166, 0.1906849, 0.1969254, 0.2017249,\n   587→    0.2078487, 0.2810377, 0.3062168, 0.4006721, 0.8219655\n   588→  )\n   589→  quantile_level <- c(\n   590→    0.600, 0.650, 0.700, 0.750, 0.800,\n   591→    0.850, 0.900, 0.950, 0.975, 0.990\n   592→  )\n   593→\n   594→  expect_error(\n   595→    wis(observed, predicted, quantile_level),\n   596→    \"No valid forecast intervals found.\"\n   597→  )\n   598→})\n   599→\n   600→\n   601→# ============================================================================ #\n   602→# Quantile score ============================================================= #\n   603→# ============================================================================ #\n   604→test_that(\"Quantlie score and interval score yield the same result, weigh = TRUE\", {\n   605→  observed <- rnorm(10, mean = 1:10)\n   606→  alphas <- c(0.1, 0.5, 0.9)\n   607→\n   608→  for (alpha in alphas) {\n   609→    lower <- qnorm(alpha / 2, rnorm(10, mean = 1:10))\n   610→    upper <- qnorm((1 - alpha / 2), rnorm(10, mean = 11:20))\n   611→\n   612→    w <- TRUE\n   613→    is <- interval_score(\n   614→      observed = observed,\n   615→      lower = lower,\n   616→      upper = upper,\n   617→      interval_range = (1 - alpha) * 100,\n   618→      weigh = w\n   619→    )\n   620→\n   621→    wis <- wis(\n   622→      observed = observed,\n   623→      predicted = cbind(lower, upper),\n   624→      quantile_level = c(alpha / 2, 1 - alpha / 2),\n   625→      count_median_twice = FALSE,\n   626→      weigh = w\n   627→    )\n   628→\n   629→    qs_lower <- quantile_score(observed,\n   630→      predicted = matrix(lower),\n   631→      quantile_level = alpha / 2,\n   632→      weigh = w\n   633→    )\n   634→    qs_upper <- quantile_score(observed,\n   635→      predicted = matrix(upper),\n   636→      quantile_level = 1 - alpha / 2,\n   637→      weigh = w\n   638→    )\n   639→    expect_equal((qs_lower + qs_upper) / 2, is) # nolint: expect_identical_linter\n   640→    expect_equal(wis, is) # nolint: expect_identical_linter\n   641→  }\n   642→})\n   643→\n   644→test_that(\"wis works with separate results\", {\n   645→  wis <- wis(\n   646→    observed = y,\n   647→    predicted = forecast_quantiles_matrix,\n   648→    quantile_level = forecast_quantile_probs,\n   649→    separate_results = TRUE\n   650→  )\n   651→  expect_equal(wis$wis, wis$dispersion + wis$overprediction + wis$underprediction) # nolint: expect_identical_linter\n   652→})\n   653→\n   654→\n   655→# ============================================================================ #\n   656→# overprediction, underprediction, dispersion ================================ #\n   657→# ============================================================================ #\n   658→test_that(\"wis is the sum of overprediction, underprediction, dispersion\", {\n   659→  wis <- wis(\n   660→    observed = y,\n   661→    predicted = forecast_quantiles_matrix,\n   662→    quantile_level = forecast_quantile_probs\n   663→  )\n   664→\n   665→  d <- dispersion_quantile(y, forecast_quantiles_matrix, forecast_quantile_probs)\n   666→  o <- overprediction_quantile(y, forecast_quantiles_matrix, forecast_quantile_probs)\n   667→  u <- underprediction_quantile(y, forecast_quantiles_matrix, forecast_quantile_probs)\n   668→\n   669→  expect_equal(wis, d + o + u) # nolint: expect_identical_linter\n   670→})\n   671→\n   672→\n   673→# ============================================================================ #\n   674→# `interval_coverage` =============================================== #\n   675→# ============================================================================ #\n   676→test_that(\"interval_coverage works\", {\n   677→  expect_equal( # nolint: expect_identical_linter\n   678→    interval_coverage(observed, predicted, quantile_level, interval_range = 50),\n   679→    c(TRUE, FALSE, FALSE)\n   680→  )\n   681→})\n   682→\n   683→test_that(\"interval_coverage rejects wrong inputs\", {\n   684→  expect_error(\n   685→    interval_coverage(observed, predicted, quantile_level, interval_range = c(50, 0)),\n   686→    \"Assertion on 'interval_range' failed: Must have length 1.\"\n   687→  )\n   688→})\n   689→\n   690→test_that(\"interval_coverage_quantile throws a warning when a required quantile is not available\", {\n   691→  dropped_quantile_pred <- predicted[, -4]\n   692→  dropped_quantiles <- quantile_level[-4]\n   693→  expect_error(\n   694→    interval_coverage(\n   695→      observed, dropped_quantile_pred, dropped_quantiles,\n   696→      interval_range = 50\n   697→    ),\n   698→    paste(\n   699→      \"To compute the interval coverage for an interval range of \\\"50%\\\",\",\n   700→      \"the 0.25 and 0.75 quantiles are required\"\n   701→    )\n   702→  )\n   703→})\n   704→\n   705→\n   706→# ============================================================================ #\n   707→# `bias_quantile` ============================================================ #\n   708→# ============================================================================ #\n   709→test_that(\"bias_quantile() works as expected\", {\n   710→  predicted <- c(1, 2, 3)\n   711→  quantiles <- c(0.1, 0.5, 0.9)\n   712→  expect_equal( # nolint: expect_identical_linter\n   713→    bias_quantile(observed = 2, predicted, quantiles),\n   714→    0\n   715→  )\n   716→  predicted <- c(0, 1, 2)\n   717→  quantiles <- c(0.1, 0.5, 0.9)\n   718→  expect_equal( # nolint: expect_identical_linter\n   719→    bias_quantile(observed = 2, predicted, quantiles),\n   720→    -0.8\n   721→  )\n   722→\n   723→  predicted <- c(\n   724→    705.500, 1127.000, 4006.250, 4341.500, 4709.000, 4821.996,\n   725→    5340.500, 5451.000, 5703.500, 6087.014, 6329.500, 6341.000,\n   726→    6352.500, 6594.986, 6978.500, 7231.000, 7341.500, 7860.004,\n   727→    7973.000, 8340.500, 8675.750, 11555.000, 11976.500\n   728→  )\n   729→\n   730→  quantile_level <- c(0.01, 0.025, seq(0.05, 0.95, 0.05), 0.975, 0.99)\n   731→\n   732→  observed <- 8062\n   733→  expect_equal(bias_quantile(observed, predicted, quantile_level), -0.8)\n   734→})\n   735→\n   736→test_that(\"bias_quantile handles matrix input\", {\n   737→  observed <- seq(10, 0, length.out = 4)\n   738→  predicted <- matrix(1:12, ncol = 3)\n   739→  quantiles <- c(0.1, 0.5, 0.9)\n   740→  expect_equal(\n   741→    bias_quantile(observed, predicted, quantiles),\n   742→    c(-1.0, -0.8, 0.8, 1.0)\n   743→  )\n   744→})\n   745→\n   746→\n   747→test_that(\"bias_quantile() handles vector that is too long\", {\n   748→  predicted <- c(NA, 1, 2, 3)\n   749→  quantiles <- c(0.1, 0.5, 0.9)\n   750→\n   751→  expect_error(\n   752→    bias_quantile(observed = 2, predicted, quantiles),\n   753→    \"Assertion on 'quantile_level' failed: Must have length 4, but has length 3.\"\n   754→  )\n   755→})\n   756→\n   757→test_that(\"bias_quantile() handles NA values\", {\n   758→  predicted <- c(NA, 1, 2)\n   759→  quantiles <- c(0.1, 0.5, 0.9)\n   760→  expect_equal( # nolint: expect_identical_linter\n   761→    bias_quantile(observed = 2, predicted, quantiles),\n   762→    -0.8\n   763→  )\n   764→  predicted <- c(0, 1, 2)\n   765→  quantiles <- c(0.1, 0.5, NA)\n   766→  expect_equal( # nolint: expect_identical_linter\n   767→    bias_quantile(observed = 2, predicted, quantiles),\n   768→    -1\n   769→  )\n   770→  expect_equal( # nolint: expect_identical_linter\n   771→    bias_quantile(observed = 2, predicted, quantiles, na.rm = FALSE),\n   772→    NA_real_\n   773→  )\n   774→})\n   775→\n   776→test_that(\"bias_quantile() errors if no predictions\", {\n   777→  expect_error(\n   778→    bias_quantile(observed = 2, numeric(0), numeric(0)),\n   779→    \"Assertion on 'quantile_level' failed: Must have length >= 1, but has length 0\"\n   780→  )\n   781→})\n   782→\n   783→test_that(\"bias_quantile() returns correct bias if value below the median\", {\n   784→  predicted <- c(1, 2, 4, 5)\n   785→  quantiles <- c(0.1, 0.3, 0.7, 0.9)\n   786→  suppressMessages(\n   787→    expect_equal(bias_quantile(observed = 1, predicted, quantiles), 0.8)\n   788→  )\n   789→})\n   790→\n   791→test_that(\"bias_quantile() returns correct bias if value above median\", {\n   792→  predicted <- c(1, 2, 4, 5)\n   793→  quantiles <- c(0.1, 0.3, 0.7, 0.9)\n   794→  suppressMessages(\n   795→    expect_equal(bias_quantile(observed = 5, predicted, quantiles), -0.8)\n   796→  )\n   797→})\n   798→\n   799→test_that(\"bias_quantile() returns correct bias if value at the median\", {\n   800→  predicted <- c(1, 2, 3, 4)\n   801→  quantiles <- c(0.1, 0.3, 0.5, 0.7)\n   802→\n   803→  expect_equal(bias_quantile(observed = 3, predicted, quantiles), 0) # nolint: expect_identical_linter\n   804→})\n   805→\n   806→test_that(\"bias_quantile() returns 1 if true value below min prediction\", {\n   807→  predicted <- c(2, 3, 4, 5)\n   808→  quantiles <- c(0.1, 0.3, 0.7, 0.9)\n   809→\n   810→  suppressMessages(\n   811→    expect_equal(bias_quantile(observed = 1, predicted, quantiles), 1) # nolint: expect_identical_linter\n   812→  )\n   813→})\n   814→\n   815→test_that(\"bias_quantile() returns -1 if true value above max prediction\", {\n   816→  predicted <- c(1, 2, 3, 4)\n   817→  quantiles <- c(0.1, 0.3, 0.5, 0.7)\n   818→\n   819→  expect_equal(bias_quantile(observed = 6, predicted, quantiles), -1) # nolint: expect_identical_linter\n   820→})\n   821→\n   822→test_that(\"bias_quantile(): quantiles must be between 0 and 1\", {\n   823→  predicted <- 1:4\n   824→\n   825→  # Failing example\n   826→  quantiles <- c(-0.1, 0.3, 0.5, 0.8)\n   827→  expect_error(\n   828→    bias_quantile(observed = 3, predicted, quantiles),\n   829→    \"Assertion on 'quantile_level' failed: Element 1 is not >= 0.\"\n   830→  )\n   831→\n   832→  # Passing counter example\n   833→  quantiles <- c(0.1, 0.3, 0.5, 0.8)\n   834→  expect_silent(bias_quantile(observed = 3, predicted, quantiles))\n   835→})\n   836→\n   837→test_that(\"bias_quantile(): quantiles must be increasing\", {\n   838→  predicted <- 1:4\n   839→\n   840→  # Failing example\n   841→  quantiles <- c(0.8, 0.3, 0.5, 0.9)\n   842→  expect_error(\n   843→    bias_quantile(observed = 3, predicted, quantiles),\n   844→    \"Predictions must not be decreasing with increasing quantile level\"\n   845→  )\n   846→\n   847→  # Passing counter example\n   848→  quantiles <- c(0.3, 0.5, 0.8, 0.9)\n   849→  expect_silent(bias_quantile(observed = 3, predicted, quantiles))\n   850→})\n   851→\n   852→test_that(\"bias_quantile(): predictions must be increasing\", {\n   853→  predicted <- c(1, 2, 4, 3)\n   854→  quantiles <- c(0.1, 0.3, 0.5, 0.9)\n   855→\n   856→  expect_error(\n   857→    bias_quantile(observed = 3, predicted, quantiles),\n   858→    \"Predictions must not be decreasing with increasing quantile level\"\n   859→  )\n   860→  expect_silent(bias_quantile(observed = 3, 1:4, quantiles))\n   861→})\n   862→\n   863→test_that(\"bias_quantile(): quantile levels must be unique\", {\n   864→  predicted <- 1:4\n   865→\n   866→  # Failing example\n   867→  quantiles <- c(0.3, 0.3, 0.5, 0.8)\n   868→  expect_error(\n   869→    bias_quantile(observed = 3, predicted, quantiles),\n   870→    \"Assertion on 'quantile_level' failed: Contains duplicated values, position 2.\"\n   871→  )\n   872→\n   873→  # Passing example\n   874→  quantiles <- c(0.3, 0.5, 0.