→  predicted <- c(NA, 1, 2, 3)\n   749→  quantiles <- c(0.1, 0.5, 0.9)\n   750→\n   751→  expect_error(\n   752→    bias_quantile(observed = 2, predicted, quantiles),\n   753→    \"Assertion on 'quantile_level' failed: Must have length 4, but has length 3.\"\n   754→  )\n   755→})\n   756→\n   757→test_that(\"bias_quantile() handles NA values\", {\n   758→  predicted <- c(NA, 1, 2)\n   759→  quantiles <- c(0.1, 0.5, 0.9)\n   760→  expect_equal( # nolint: expect_identical_linter\n   761→    bias_quantile(observed = 2, predicted, quantiles),\n   762→    -0.8\n   763→  )\n   764→  predicted <- c(0, 1, 2)\n   765→  quantiles <- c(0.1, 0.5, NA)\n   766→  expect_equal( # nolint: expect_identical_linter\n   767→    bias_quantile(observed = 2, predicted, quantiles),\n   768→    -1\n   769→  )\n   770→  expect_equal( # nolint: expect_identical_linter\n   771→    bias_quantile(observed = 2, predicted, quantiles, na.rm = FALSE),\n   772→    NA_real_\n   773→  )\n   774→})\n   775→\n   776→test_that(\"bias_quantile() errors if no predictions\", {\n   777→  expect_error(\n   778→    bias_quantile(observed = 2, numeric(0), numeric(0)),\n   779→    \"Assertion on 'quantile_level' failed: Must have length >= 1, but has length 0\"\n   780→  )\n   781→})\n   782→\n   783→test_that(\"bias_quantile() returns correct bias if value below the median\", {\n   784→  predicted <- c(1, 2, 4, 5)\n   785→  quantiles <- c(0.1, 0.3, 0.7, 0.9)\n   786→  suppressMessages(\n   787→    expect_equal(bias_quantile(observed = 1, predicted, quantiles), 0.8)\n   788→  )\n   789→})\n   790→\n   791→test_that(\"bias_quantile() returns correct bias if value above median\", {\n   792→  predicted <- c(1, 2, 4, 5)\n   793→  quantiles <- c(0.1, 0.3, 0.7, 0.9)\n   794→  suppressMessages(\n   795→    expect_equal(bias_quantile(observed = 5, predicted, quantiles), -0.8)\n   796→  )\n   797→})\n   798→\n   799→test_that(\"bias_quantile() returns correct bias if value at the median\", {\n   800→  predicted <- c(1, 2, 3, 4)\n   801→  quantiles <- c(0.1, 0.3, 0.5, 0.7)\n   802→\n   803→  expect_equal(bias_quantile(observed = 3, predicted, quantiles), 0) # nolint: expect_identical_linter\n   804→})\n   805→\n   806→test_that(\"bias_quantile() returns 1 if true value below min prediction\", {\n   807→  predicted <- c(2, 3, 4, 5)\n   808→  quantiles <- c(0.1, 0.3, 0.7, 0.9)\n   809→\n   810→  suppressMessages(\n   811→    expect_equal(bias_quantile(observed = 1, predicted, quantiles), 1) # nolint: expect_identical_linter\n   812→  )\n   813→})\n   814→\n   815→test_that(\"bias_quantile() returns -1 if true value above max prediction\", {\n   816→  predicted <- c(1, 2, 3, 4)\n   817→  quantiles <- c(0.1, 0.3, 0.5, 0.7)\n   818→\n   819→  expect_equal(bias_quantile(observed = 6, predicted, quantiles), -1) # nolint: expect_identical_linter\n   820→})\n   821→\n   822→test_that(\"bias_quantile(): quantiles must be between 0 and 1\", {\n   823→  predicted <- 1:4\n   824→\n   825→  # Failing example\n   826→  quantiles <- c(-0.1, 0.3, 0.5, 0.8)\n   827→  expect_error(\n   828→    bias_quantile(observed = 3, predicted, quantiles),\n   829→    \"Assertion on 'quantile_level' failed: Element 1 is not >= 0.\"\n   830→  )\n   831→\n   832→  # Passing counter example\n   833→  quantiles <- c(0.1, 0.3, 0.5, 0.8)\n   834→  expect_silent(bias_quantile(observed = 3, predicted, quantiles))\n   835→})\n   836→\n   837→test_that(\"bias_quantile(): quantiles must be increasing\", {\n   838→  predicted <- 1:4\n   839→\n   840→  # Failing example\n   841→  quantiles <- c(0.8, 0.3, 0.5, 0.9)\n   842→  expect_error(\n   843→    bias_quantile(observed = 3, predicted, quantiles),\n   844→    \"Predictions must not be decreasing with increasing quantile level\"\n   845→  )\n   846→\n   847→  # Passing counter example\n   848→  quantiles <- c(0.3, 0.5, 0.8, 0.9)\n   849→  expect_silent(bias_quantile(observed = 3, predicted, quantiles))\n   850→})\n   851→\n   852→test_that(\"bias_quantile(): predictions must be increasing\", {\n   853→  predicted <- c(1, 2, 4, 3)\n   854→  quantiles <- c(0.1, 0.3, 0.5, 0.9)\n   855→\n   856→  expect_error(\n   857→    bias_quantile(observed = 3, predicted, quantiles),\n   858→    \"Predictions must not be decreasing with increasing quantile level\"\n   859→  )\n   860→  expect_silent(bias_quantile(observed = 3, 1:4, quantiles))\n   861→})\n   862→\n   863→test_that(\"bias_quantile(): quantile levels must be unique\", {\n   864→  predicted <- 1:4\n   865→\n   866→  # Failing example\n   867→  quantiles <- c(0.3, 0.3, 0.5, 0.8)\n   868→  expect_error(\n   869→    bias_quantile(observed = 3, predicted, quantiles),\n   870→    \"Assertion on 'quantile_level' failed: Contains duplicated values, position 2.\"\n   871→  )\n   872→\n   873→  # Passing example\n   874→  quantiles <- c(0.3, 0.5, 0.8, 0.9)\n   875→  expect_silent(bias_quantile(observed = 3, predicted, quantiles))\n   876→})\n   877→\n   878→test_that(\"bias_quantile only produces one message\", {\n   879→  expect_message(\n   880→    bias_quantile(observed, predicted[, -3], quantile_level[-3]),\n   881→    \"Median not available, interpolating median from the two innermost quantiles in order to compute bias.\"\n   882→  )\n   883→})\n   884→\n   885→test_that(\"bias_quantile() works with point forecasts\", {\n   886→  predicted <- 1\n   887→  observed <- 1\n   888→  quantile_level <- 0.5\n   889→  expect_equal(bias_quantile(observed, predicted, quantile_level), 0) # nolint: expect_identical_linter\n   890→})\n   891→\n   892→\n   893→test_that(\"bias_quantile() handles cases where median is not available\", {\n   894→  predicted <- c(1, 10)\n   895→  observed <- 15\n   896→  quantile_level <- c(0.2, 0.4)\n   897→\n   898→  expect_error(\n   899→    bias_quantile(observed, predicted, quantile_level),\n   900→    \"Assertion on 'quantile_level\\\\[quantile_leve\\\\l >= 0.5]' failed: Must have length >= 1, but has length 0.\"\n   901→  )\n   902→})\n   903→\n   904→# `interpolate_median` ======================================================= #\n   905→test_that(\"interpolation in `interpolate_median` works\", {\n   906→  predicted <- c(1, 10)\n   907→  observed <- 15\n   908→  quantile_level <- c(0.4, 0.6)\n   909→\n   910→  # median is missing, symmetric quantile levels given\n   911→  expect_equal(interpolate_median(predicted, quantile_level), mean(predicted)) # nolint: expect_identical_linter\n   912→  quantile_level <- c(0.1, 0.9)\n   913→  expect_equal(interpolate_median(predicted, quantile_level), mean(predicted)) # nolint: expect_identical_linter\n   914→\n   915→  1 + 0.4 / 0.8 * (10 - 1)\n   916→\n   917→  # asymmetric quantile levels given\n   918→  quantile_level <- c(0.3, 0.6)\n   919→  expect_equal(interpolate_median(predicted, quantile_level), 1 + 0.2 / 0.3 * (10 - 1)) # nolint: expect_identical_linter\n   920→\n   921→  quantile_level <- c(0.2, 0.6)\n   922→  expect_equal(interpolate_median(predicted, quantile_level), 1 + 0.3 / 0.4 * (10 - 1)) # nolint: expect_identical_linter\n   923→})\n   924→\n   925→\n   926→\n   927→# ============================================================================ #\n   928→# `ae_median_quantile` ======================================================= #\n   929→# ============================================================================ #\n   930→\n   931→test_that(\"ae_median_quantile() works as_expected\", {\n   932→  observed <- 1:30\n   933→  predicted_values <- matrix(2:31)\n   934→  expect_equal( # nolint: expect_identical_linter\n   935→    ae_median_quantile(observed, predicted_values, quantile_level = 0.5),\n   936→    as.numeric(predicted_values - observed)\n   937→  )\n   938→\n   939→  # using a vector as input for predicted does not work if there are several\n   940→  # observed values\n   941→  expect_error(\n   942→    ae_median_quantile(observed, as.numeric(predicted_values), quantile_level = 0.5),\n   943→    \"Assertion on 'predicted' failed: Must be of type 'matrix', not 'double'.\"\n   944→  )\n   945→\n   946→  # it does work if there is only a single observed value - in this case\n   947→  # the vector gets treated as one forecast - which means that we need to\n   948→  # supply multiple quantile levels now, because it assumes that single forecast\n   949→  # is represented by several quantiles\n   950→  expect_equal( # nolint: expect_identical_linter\n   951→    ae_median_quantile(observed[1], as.numeric(predicted_values)[1:3], quantile_level = c(0.1, 0.5, 0.7)),\n   952→    2\n   953→  )\n   954→\n   955→  # test that we get a warning if there are inputs without a 0.5 quantile\n   956→  expect_error(\n   957→    ae_median_quantile(observed, predicted_values, quantile_level = 0.6),\n   958→    \"In order to compute the absolute error of the median, \"\n   959→  )\n   960→})\n   961→\n   962→\n   963→\n   964→# ============================================================================ #\n   965→# quantile_score() =============================================================\n   966→# ============================================================================ #\n   967→test_that(\"quantile_score() works regardless of whether input is vector or matrix\", {\n   968→  observed <- rnorm(1, mean = 2)\n   969→  alpha <- seq(0.2, 0.8, 0.2)\n   970→  predicted <- rnorm(4, mean = 1:4)\n   971→\n   972→\n   973→  expect_equal( # nolint: expect_identical_linter\n   974→    quantile_score(observed, predicted, quantile_level = alpha),\n   975→    quantile_score(observed, t(matrix(predicted)), quantile_level = alpha)\n   976→  )\n   977→})\n   978→"}]},"parent_tool_use_id":"toolu_015Nto4GSrTWw9Rbezap7U8c","session_id":"18263a2a-ff1c-4bcf-92eb-332cab9cfb17","uuid":"e6c2555e-898d-464d-a4f9-308671a1a4e8"}
