linters: linters_with_tags(
    tags = NULL, # include all linters
    implicit_integer_linter = NULL,
    undesirable_function_linter = NULL,
    function_argument_linter = NULL,
    object_name_linter = NULL,
    line_length_linter(120),
    cyclocomp_linter(20L),
    return_linter = NULL,
    object_overwrite_linter = NULL,
    # Disabled: ::: is needed for testing internal functions
    undesirable_operator_linter = NULL,
    # Disabled: project uses expect_equal() by default for flexibility
    expect_identical_linter = NULL,
    # Disabled: comments in tests often serve as documentation
    commented_code_linter = NULL,
    # Disabled: false positives with data.table := and expect_* blocks
    implicit_assignment_linter = NULL,
    # Disabled: stringsAsFactors = FALSE is default in R 4.0+
    strings_as_factors_linter = NULL,
    # Disabled: single-call pipes are acceptable
    one_call_pipe_linter = NULL,
    # Disabled: quoted keywords are acceptable in data.table/dplyr
    keyword_quote_linter = NULL,
    # Disabled: c() with single element is often intentional for consistency
    unnecessary_concatenation_linter = NULL,
    # Disabled: vignette library() patterns are acceptable
    library_call_linter = NULL,
    # Disabled: package uses both pipe styles in different contexts
    pipe_consistency_linter = NULL,
    # Disabled: false positives when packages not installed in CI
    missing_package_linter = NULL,
    namespace_linter = NULL,
    object_usage_linter = NULL,
    # Disabled: Windows path compatibility not critical
    nonportable_path_linter = NULL,
    # Disabled: testthat style suggestions - project prefers existing patterns
    expect_type_linter = NULL,
    expect_length_linter = NULL,
    expect_named_linter = NULL,
    expect_s3_class_linter = NULL,
    expect_true_false_linter = NULL,
    expect_null_linter = NULL,
    expect_not_linter = NULL,
    # Disabled: minor style suggestions
    any_is_na_linter = NULL,
    paste_linter = NULL,
    seq_linter = NULL,
    lengths_linter = NULL,
    comparison_negation_linter = NULL,
    condition_call_linter = NULL,
    nested_ifelse_linter = NULL,
    missing_argument_linter = NULL,
    indentation_linter = NULL,
    object_length_linter = NULL
  )
exclude: "# nolint"
